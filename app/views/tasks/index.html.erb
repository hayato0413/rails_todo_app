<div class="main-container">
  <h2>スケジュール一覧</h2>

  <% flash.each do |message_type, message| %>
    <div class="notice">
      <%= message %>
    </div>
  <% end %>

  <table id="task_list">
    <thead>
      <tr>
        <th>ID</th>
        <th>タイトル</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>終日</th>
        <th>スケジュール更新日時</th>
        <th>確認</th>
        <th>編集</th>
        <th>削除</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.id %></td>
          <td><%= task.title %></td>
          <td><%= task.startday %></td>
          <td><%= task.endday %></td>
          <td>
            <% if task.everyday %>
              <p id="everyday-sign">◯</p>
            <% end %>
          </td>
          <td><%= l task.updated_at %></td>
          
          <td><%= link_to "確認", task_path(task) %></td>
          <td><%= link_to "編集", edit_task_path(task) %></td>
          <td><%= button_to "削除", task_path(task), method: :delete %></td>
      
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "スケジュール新規登録", new_task_path %>
</div>
